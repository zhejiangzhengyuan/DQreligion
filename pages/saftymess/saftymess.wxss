picker view {
	height: 36rpx;
	width: 25vw;
	/* border: 1px solid black; */
	display: inline-block;
	font-size: 27rpx;
	text-align: center;
	vertical-align: middle;
	background-color: white;
	border-radius: 8rpx;
	padding: 10rpx;
}

picker {
	display: inline-block;
	margin-left: 40rpx;
	margin-right: 40rpx;
}

.section_nav {
	display: block;
	height: 96rpx;
	width: 100vw;
	text-align: center;
	/* box-shadow: 0px 1px 8px 0px black; */
}

.section_nav image {
	height: 20rpx;
	width: 20rpx;
}

.section_nav text {
	display: inline-block;
	font-size: 30rpx;
	line-height: 96rpx;
	margin-right: 18rpx;
}

.section_nav>view {
	display: inline-block;
	width: 50vw;
	text-align: center;
}

.section_nav picker view {
	border: none;
	font-size: 30rpx;
	margin-top: -2rpx;
}

.section_nav picker {
	margin-right: 0;
}

#timepickers {
	height:auto;
	position: absolute;
	top: 99rpx;
	width: 100vw;
	left: 0;
	z-index: 2;
	background-color: #f2f2f2;
	text-align: center;
}
#timepickers picker{
	margin-top: 40rpx;
}
#timepickers button{
	display: inline-block;
	/* width: 80rpx; */
	height: 50rpx;
	line-height: 50rpx;
	font-size: 30rpx;
	padding: 0 45rpx 0 45rpx;
	margin-top: 40rpx;
	margin-bottom: 40rpx;
	background: linear-gradient(#ecd37f , #c3a322);
	color: white;
	border: none;
}
#timepickers .spaces{
	display: inline-block;
	width: 150rpx;
}
#tables{
	background-color: rgba(250,250,250,0.9);
	padding-top: 25rpx;
}